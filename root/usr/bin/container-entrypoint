#!/bin/bash

set -e

SCRIPT_DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
CONFIG_DIR=/var/lib/pgsql/config

function get_config() {

  conf_name="${1}"
  conf_file="${CONFIG_DIR}/${conf_name}"
  if [ -f ${conf_file} ]; then
    value="$(cat ${conf_file})"
  else
    value="${!conf_name}"
  fi
  if [ ! -z ${value} ]; then
    eval "export ${conf_name}=${value}"
  fi
}

get_config MODE
get_config POSTGRESQL_ADMIN_PASSWORD
get_config POSTGRESQL_USER
get_config POSTGRESQL_PASSWORD
get_config POSTGRESQL_DATABASE

# Define any variables if not defined in files:
export MODE=${MODE:-MASTER}

case "${MODE}" in
  MASTER)
    ${SCRIPT_DIR}/run-postgresql-master "$@"
    ;;
  SLAVE)
    ${SCRIPT_DIR}/run-postgresql-slave "$@"
    ;;
  *)
    echo "Invalid MODE, expecting MASTER|SLAVE"
    exit 1
    ;;
esac
